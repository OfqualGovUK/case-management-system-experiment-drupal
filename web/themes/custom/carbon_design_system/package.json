{
  "name": "carbon_design_system_theme",
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev:components": "vite build --watch",
    "dev:assets": "vite build --watch",
    "dev:js": "vite build --mode js --watch",
    "build:assets": "vite build",
    "build:js": "vite build --mode js",
    "build:components": "for dir in components/*/; do component=$(basename \"$dir\"); if [ -f \"$dir/src/$component.js\" ]; then vite build --mode $component; fi; done",
    "build": "npm run build:assets && npm run build:js && npm run build:components",
    "preview": "vite preview",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@carbon/icon-helpers": "^10.66.0",
    "@carbon/icons": "^11.70.0",
    "@carbon/styles": "^1.95.0",
    "@carbon/themes": "^11.60.0",
    "@carbon/web-components": "^2.43.0",
    "glob": "^10.0.0",
    "vite": "^5.3.0"
  },
  "devDependencies": {
    "patch-package": "^8.0.1",
    "sass": "^1.94.2",
    "sass-embedded": "^1.93.3"
  }
}
