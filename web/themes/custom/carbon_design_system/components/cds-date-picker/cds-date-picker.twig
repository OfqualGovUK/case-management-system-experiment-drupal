{% set _kind = kind|default('single') %}
<cds-date-picker
  date-format="{{ date_format|default('Y-m-d') }}"
  value="{{ value|default('') }}">
  <cds-date-picker-input
    placeholder="{{ placeholder|default('yyyy-mm-dd') }}"
    label-text="{{ label_text }}"
    kind="{{ _kind }}">
  </cds-date-picker-input>
</cds-date-picker>
