{#
/**
 * @file
 * Template for the Carbon Design System UI Shell component.
 *
 * @param string site_name
 * The name of the site or application.
 * @param boolean is_authenticated
 * Flag to show/hide authenticated user elements.
 * @param array links
 * Array of navigation links for the header.
 */
#}
<cds-header aria-label="{{ site_name }}">

  {# The main header name/logo area #}
  <cds-header-name href="#">
    {{ site_name }}
  </cds-header-name>

  {# Main horizontal navigation bar #}
  <cds-header-nav>
    {% for link in links %}
      <cds-header-nav-item
        href="{{ link.url }}"
        {% if link.is_active %}is-active{% endif %}
      >
        {{ link.title }}
      </cds-header-nav-item>
    {% endfor %}
  </cds-header-nav>

  {# Header global actions (search, notification, profile) #}
  <cds-header-global-bar>
    <cds-header-action-menu>
      {# Search Icon Action #}
      <cds-header-action
        icon="search"
        button-label="Search"
        title="Search"
      ></cds-header-action>

      {# Notification Icon Action #}
      <cds-header-action
        icon="notification"
        button-label="Notifications"
        title="Notifications"
      ></cds-header-action>

      {# User Icon Action (often visible only when authenticated) #}
      {% if is_authenticated %}
        <cds-header-action
          icon="user--avatar"
          button-label="User Profile"
          title="User Profile"
        ></cds-header-action>
      {% endif %}
    </cds-header-action-menu>
  </cds-header-global-bar>

  {# The menu button (hamburger icon) for mobile and collapsed side nav #}
  <cds-header-menu-button button-label="Open menu"></cds-header-menu-button>

  {# Side Navigation (often used in conjunction with the UI Shell) #}
{#  <cds-side-nav expanded>#}
{#    {% for link in links %}#}
{#      <cds-side-nav-link href="{{ link.url }}">#}
{#        {{ link.title }}#}
{#      </cds-side-nav-link>#}
{#    {% endfor %}#}
{#  </cds-side-nav>#}
</cds-header>
