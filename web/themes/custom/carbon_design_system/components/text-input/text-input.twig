{#
/**
 * @file
 * Template for the Carbon Design System Text Input component.
 */
#}

<cds-form-item>
  {% set required_attr = required ? ' required' : '' %}
  {# Now check for invalid_text to set the 'invalid' attribute #}
  {% set invalid_attr = invalid_text ? ' invalid' : '' %}

  <cds-text-input
    label="{{ label }}"
    helper-text="{{ helper_text }}"
    placeholder="{{ placeholder }}"
    value="{{ value }}"
    id="{{ id }}"
    {{ required_attr }}
    {{ invalid_attr }}

    {# Output invalid-text only if it is present #}
    {% if invalid_text %}
      invalid-text="{{ invalid_text }}"
    {% endif %}

    {{ attributes }}
  >
  </cds-text-input>
</cds-form-item>
