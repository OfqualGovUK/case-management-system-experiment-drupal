<section class="cds-data-table" data-cds-datatable data-page-size="{{ page_size|default(10) }}">
  <cds-table
    {% if sortable %} is-sortable {% endif %}
    size="{{ size|default('lg') }}"
  >
    {% if searchable %}
      <cds-table-toolbar slot="toolbar">
        <cds-table-toolbar-content>
          <cds-table-toolbar-search placeholder="{{ search_placeholder|default('Searchâ€¦') }}"></cds-table-toolbar-search>
        </cds-table-toolbar-content>
      </cds-table-toolbar>
    {% endif %}

    <cds-table-head>
      <cds-table-header-row>
        {% for header in headers %}
          <cds-table-header-cell>{{ header }}</cds-table-header-cell>
        {% endfor %}
      </cds-table-header-row>
    </cds-table-head>

    <cds-table-body>
      {% for row in rows %}
        <cds-table-row>
          {% for cell in row.cells %}
            <cds-table-cell>{{ cell }}</cds-table-cell>
          {% endfor %}
        </cds-table-row>
      {% endfor %}
    </cds-table-body>
  </cds-table>

  {% if paginated %}
    <cds-pagination
      class="cds-pager"
      page="1"
      page-size="{{ page_size|default(10) }}"
      page-sizes='[{{ (page_sizes|default([10,20,50])|join(",")) }}]'
      total-items="{{ rows|length }}"
    ></cds-pagination>
  {% endif %}
  <div class="cds-table-empty" hidden>No results</div>
</section>
