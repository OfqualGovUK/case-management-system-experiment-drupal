
<cds-select
  {% if name is defined %} name="{{ name }}" {% endif %}
  label-text="{{ label }}"
  size="{{ size|default('md') }}"
  {% if helper_text %} helper-text="{{ helper_text }}" {% endif %}
  {% if inline %} inline {% endif %}
  {% if disabled %} disabled {% endif %}
  {% if required %} required {% endif %}
  {% if invalid %} invalid {% endif %}
  {% if invalid_text %} invalid-text="{{ invalid_text }}" {% endif %}
  {% if value is defined %} value="{{ _val }}" {% endif %}
>
  {% if placeholder %}
    <cds-select-item value="" disabled selected hidden>{{ placeholder }}</cds-select-item>
  {% endif %}
  {% for opt in options %}
    <cds-select-item
      value="{{ opt.value }}"
      {% if (value is defined and opt.value == _val) %} selected {% endif %}
      {% if opt.disabled %} disabled {% endif %}
    >{{ opt.label }}</cds-select-item>
  {% endfor %}
</cds-select>
