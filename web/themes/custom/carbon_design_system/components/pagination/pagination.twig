{#
/**
 * @file
 * Template for the Carbon Pagination component.
 *
 * Available properties:
 * - page: Current page number (0-indexed).
 * - total_items: Total number of items across all pages.
 * - items_per_page: Number of items per page.
 * - page_sizes: Array of page size options (optional).
 * - attributes: HTML attributes for the <cds-pagination> element.
 *
 * Carbon pagination uses:
 * - start: First item number (1-indexed for display)
 * - page: Current page (1-indexed for display)
 * - page-size: Items per page
 * - total-items: Total items
 */
#}

{% set current_page = page + 1 %}
{% set start_item = (page * items_per_page) + 1 %}
{% set total_pages = (total_items / items_per_page)|round(0, 'ceil') %}

<cds-pagination
  start="{{ start_item }}"
  page="{{ current_page }}"
  page-size="{{ items_per_page }}"
  total-items="{{ total_items }}"
  {% if page_sizes %}
    page-sizes="{{ page_sizes|join(',') }}"
  {% else %}
    page-sizes-hidden
  {% endif %}
  {{ attributes }}
>
</cds-pagination>
