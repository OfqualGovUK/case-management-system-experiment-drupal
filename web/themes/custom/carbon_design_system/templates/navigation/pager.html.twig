{#
/**
 * @file
 * Theme override to display a pager using Carbon Design System pagination.
 *
 * Available variables:
 * - heading_id: Pagination heading ID.
 * - items: List of pager items with properties:
 *   - first: Link to first page (optional).
 *   - previous: Link to previous page (optional).
 *   - next: Link to next page (optional).
 *   - last: Link to last page (optional).
 *   - pages: List of page links.
 * - ellipses: Pagination ellipses (unused in Carbon pagination).
 * - current: The current page number (0-indexed).
 * - pagination_heading_level: Heading level (e.g., 'h2', 'h3', 'h4').
 *
 * @see template_preprocess_pager()
 */
#}

{% if items %}
  {# Carbon pagination uses JavaScript events for navigation, so we need to add a wrapper #}
  <nav class="pager carbon-pagination" role="navigation" aria-labelledby="{{ heading_id }}">
    <{{ pagination_heading_level }} id="{{ heading_id }}" class="visually-hidden">{{ 'Pagination'|t }}</{{ pagination_heading_level }}>
    
    {# Carbon pagination component with data attributes for JavaScript handling #}
    {{ include('carbon_design_system:pagination', {
      page: current,
      total_items: total_items|default(0),
      items_per_page: items_per_page|default(10),
      attributes: create_attribute()
        .addClass('pager__carbon')
        .setAttribute('data-pager-id', heading_id)
    }) }}
    
    {# Hidden links for progressive enhancement / non-JS fallback #}
    <div class="pager__items visually-hidden" aria-hidden="true">
      {% if items.first %}
        <div class="pager__item pager__item--first">
          <a href="{{ items.first.href }}" title="{{ 'Go to first page'|t }}">
            <span aria-hidden="true">{{ items.first.text|default('« First'|t) }}</span>
          </a>
        </div>
      {% endif %}
      
      {% if items.previous %}
        <div class="pager__item pager__item--previous">
          <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev">
            <span aria-hidden="true">{{ items.previous.text|default('‹ Previous'|t) }}</span>
          </a>
        </div>
      {% endif %}
      
      {% if items.pages %}
        {% for key, item in items.pages %}
          <div class="pager__item{{ item.is_active ? ' pager__item--active' : '' }}">
            {% if item.is_active %}
              <span class="pager__item--current" aria-current="page">
                {{ key }}
              </span>
            {% else %}
              <a href="{{ item.href }}" title="{{ 'Go to page @key'|t({'@key': key}) }}">
                <span aria-hidden="true">{{ key }}</span>
              </a>
            {% endif %}
          </div>
        {% endfor %}
      {% endif %}
      
      {% if items.next %}
        <div class="pager__item pager__item--next">
          <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next">
            <span aria-hidden="true">{{ items.next.text|default('Next ›'|t) }}</span>
          </a>
        </div>
      {% endif %}
      
      {% if items.last %}
        <div class="pager__item pager__item--last">
          <a href="{{ items.last.href }}" title="{{ 'Go to last page'|t }}">
            <span aria-hidden="true">{{ items.last.text|default('Last »'|t) }}</span>
          </a>
        </div>
      {% endif %}
    </div>
  </nav>
{% endif %}
