{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}

{%
  set classes = [
  'cds--text-input',
  'cds--text-input--md',
  'cds--layout--size-md',
  errors ? 'fcds--text-input--invalid'
]
%}

<input{{ attributes.addClass(classes) }} {% if errors %}data-invalid="true"{% endif %}/>{{ children }}
<div class="cds--form__helper-text">{{ attributes.placeholder }}</div>
