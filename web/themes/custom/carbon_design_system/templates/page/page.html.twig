{{ include ('carbon_design_system_web_components:ui_shell_header', {
  site_name: 'Ofqual Case Management',
  is_authenticated: logged_in,
  links: [
    { title: 'Home', url: path('<front>'), is_active: true },
    { title: 'Cases', url: 'cases' },
    { title: 'Reports', url: 'reports' },
  ]
}) }}

<div id="content-area">
  <main role="main">
    <a id="main-content" tabindex="-1"></a>{# A skip link target #}

    {{ page.content }}

    {{ include('carbon_design_system_web_components:notification', {
      kind: 'success',
      headline: 'Data Saved Successfully',
      subtitle: 'Your configuration changes have been applied.',
    }) }}

    {{ include('carbon_design_system_web_components:notification', {
      kind: 'error',
      headline: 'Connection Error',
      subtitle: 'Failed to retrieve data from the server. Please check the logs.',
      hideCloseButton: true,
    }) }}

    {{ include('carbon_design_system_web_components:tile', {
      title: 'Carbon Tile',
      content: 'This is a tile from the Carbon Design System.',
    }) }}

    {{ include('carbon_design_system_web_components:data-table', {
      title: 'User Management Table',
      headers: [
        { key: 'name', label: 'Name', sortable: true },
        { key: 'status', label: 'Status' },
        { key: 'role', label: 'User Role', sortable: true },
      ],
      rows: [
        { name: 'John Doe', status: 'Active', role: 'Admin' },
        { name: 'Jane Smith', status: 'Inactive', role: 'Editor' },
        { name: 'Peter Jones', status: 'Active', role: 'User' },
      ],
    }) }}

  </main>
</div>

{% if page.footer %}
  <footer role="contentinfo">
    {{ page.footer }}
  </footer>
{% endif %}
